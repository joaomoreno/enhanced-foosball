{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "text": "${Title}",
            "spacing": "Medium",
            "horizontalAlignment": "Center",
            "fontType": "Default",
            "size": "ExtraLarge",
            "weight": "Bolder",
            "color": "Accent"
        },
        {
            "type": "TextBlock",
            "text": "${Score}",
            "spacing": "Medium",
            "horizontalAlignment": "Center",
            "fontType": "Monospace",
            "size": "ExtraLarge",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "spacing": "Medium",
            "wrap": true,
            "text": "${Message}"
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "Watch Goal",
            "url": "${Replay}"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}