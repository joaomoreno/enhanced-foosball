{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "Container",
            "spacing": "Medium",
            "verticalContentAlignment": "Center",
            "style": "emphasis",
            "items": [
                {
                    "type": "TextBlock",
                    "spacing": "Medium",
                    "wrap": true,
                    "text": "${Message}"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "Watch Goal",
            "url": "${Replay}"
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}